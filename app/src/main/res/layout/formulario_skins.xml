<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/blanco">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/pixelify_sans"
            android:text="SELECCIONAR SKIN"
            android:textAlignment="center"
            android:textColor="@color/texto"
            android:textSize="34sp" />

        <!-- Primera fila de ImageButtons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/skin1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/fondo_boton_redondeado"
                android:src="@drawable/img_mascota1"
                android:contentDescription="Skin 1" />

            <ImageButton
                android:id="@+id/skin2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/fondo_boton_redondeado"
                android:src="@drawable/img_mascota2"
                android:contentDescription="Skin 2" />

            <ImageButton
                android:id="@+id/skin3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/fondo_boton_redondeado"
                android:src="@drawable/img_mascota3"
                android:contentDescription="Skin 3" />
        </LinearLayout>

        <!-- Segunda fila de ImageButtons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/skin4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/fondo_boton_redondeado"
                android:src="@drawable/img_mascota4"
                android:contentDescription="Skin 4" />

            <ImageButton
                android:id="@+id/skin5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/fondo_boton_redondeado"
                android:src="@drawable/img_mascota5"
                android:contentDescription="Skin 5" />

            <ImageButton
                android:id="@+id/skin6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/fondo_boton_redondeado"
                android:src="@drawable/img_mascota6"
                android:contentDescription="Skin 6" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
